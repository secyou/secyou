<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.busicomjp.sapp.repository.z.Z0SystemSettingRepository">
	<resultMap id="ComboItemResult" type="com.busicomjp.sapp.common.item.ComboItem">
    </resultMap>

	<select id="getSelectItems" resultMap="ComboItemResult" parameterType="String">
		select DISTINCT
		  kind_code code,
		  kind_name name
		from CREDIT_DEBIT_KIND_M
		order by code		
	</select>
	
	<select id="getTaxItems" resultMap="ComboItemResult" parameterType="String">
		select DISTINCT
		  tax_code code,
		  tax_name name,
		  tax_value 'option'
		from TAX_M
		order by code DESC	
	</select>
	
</mapper>